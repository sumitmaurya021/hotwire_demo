<div id="<%= dom_id(post) %>" class="p-5 border rounded-lg bg-white shadow-sm space-y-4">
  <div>
    <strong class="block font-medium mb-1">Title:</strong>
    <p class="text-gray-800"><%= post.title %></p>
  </div>

  <div>
    <strong class="block font-medium mb-1">Content:</strong>
    <p class="text-gray-600"><%= post.content %></p>
  </div>

  <div class="flex flex-wrap gap-2 pt-3 border-t">
    <%= link_to "Show",
      post,
      class: "rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 text-sm font-medium" %>

    <%= link_to "Edit",
      edit_post_path(post),
      data: { turbo_frame: "modal" },
      class: "rounded-md px-3.5 py-2.5 bg-yellow-100 hover:bg-yellow-50 text-sm font-medium" %>

    <%= button_to "Destroy",
      post,
      method: :delete,
      data: { turbo_confirm: "Are you sure?" },
      class: "rounded-md px-3.5 py-2.5 bg-red-600 hover:bg-red-500 text-white text-sm font-medium" %>
  </div>
</div>
